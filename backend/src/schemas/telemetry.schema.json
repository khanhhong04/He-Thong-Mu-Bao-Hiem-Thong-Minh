{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "SmartHelmet Telemetry v1",
  "type": "object",
  "required": ["helmet_id", "lat", "lon", "speed", "impact", "ts"],
  "additionalProperties": false,
  "properties": {
    "helmet_id": { "type": "string", "pattern": "^[A-Za-z0-9_-]{1,32}$" },
    "lat":  { "type": "number", "minimum": -90,  "maximum": 90 },
    "lon":  { "type": "number", "minimum": -180, "maximum": 180 },
    "speed":{ "type": "number", "minimum": 0 },
    "impact": { "type": "boolean" },
    "ts": { "type": "string", "format": "date-time" },
    "scenario": { "type": "integer", "minimum": 1, "maximum": 6 },
    "crash_confirmed": { "type": "boolean" }
  }
}
